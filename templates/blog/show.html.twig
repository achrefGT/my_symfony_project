{% extends 'base.html.twig' %}

{% block body %}
    <article class="mb-4">
        <h2>{{ article.title }}</h2>
        <div class="metadata mb-3">
            Écrit le {{ article.createdAt | date('d/m/y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }}
        </div>
        <div class="content">
            <img src="{{ article.image }}" alt="{{ article.title }}" class="img-fluid mb-3 mx-auto d-block">
            {{ article.content | raw }}
        </div>
    </article>

    <section id="commentaires" class="mt-4">
        <h3 class="mb-4">{{ article.comments | length }} commentaires</h3>

        {% for comment in article.comments %}
            <div class="comment border p-3 mb-3">
                <div class="row">
                    <div class="col-3">
                        <strong>{{ comment.author }}</strong> (<small>{{ comment.createdAt | date('d/m/Y à H:i') }}</small>)
                    </div>
                    <div class="col">
                        {{ comment.content | raw }}
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if app.user %}
            <div class="mt-4">
                <h4>Laissez un commentaire</h4>
                {{ form_start(commentForm) }}
                <div class="form-group">
                    {{ form_row(commentForm.author, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(commentForm.content, {'attr': {'class': 'form-control', 'placeholder': 'Votre commentaire'}}) }}
                </div>
                <button type="submit" class="btn btn-success mt-2">Envoyer</button>
                {{ form_end(commentForm) }}
            </div>
        {% else %}
            <div class="mt-4 d-flex justify-content-between align-items-center">
                <a href="{{ path('security_login') }}" class="btn btn-primary">Connectez-vous pour commenter</a>
            </div>

        {% endif %}
    </section>
{% endblock %}

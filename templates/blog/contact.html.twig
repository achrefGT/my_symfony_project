{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Contact Us</h1>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="form-group mt-5">
                    {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Your Name', 'required': 'required'}}) }}
                </div>

                <div class="form-group mt-4">
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your Email', 'required': 'required'}}) }}
                </div>

                <div class="form-group mt-4">
                    {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Your phone number'}}) }}
                </div>

                <div class="form-group mt-4">
                    {{ form_widget(form) }}
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">Send</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Insciption sur le site</h1>

    {{ form_start(form) }}
    {{ form_row(form.userName, {'label': "Nom d'utlisateur", 'attr': {'placeholder': "Nome d'utilisateur"}}) }}
    {{ form_row(form.email, {'label': "Adresse E-mail", 'attr': {'placeholder': "Adresse E-mail"}}) }}
    {{ form_row(form.password, {'label': "Mot de passe", 'attr': {'placeholder': "Mot de passe"}}) }}
    {{ form_row(form.confirmPassword, {'label': "Confirmer mot de passe", 'attr': {'placeholder': "Répétez mot de passe"}}) }}
    <button type="submit" class="btn btn-success" style="margin-top: 10px;">Inscription</button>
    {{ form_end(form) }}
{% endblock %}
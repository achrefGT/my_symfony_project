{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                    <h1 class="text-center mb-4">Registration on the website</h1>
                    {{ form_start(form) }}

                    <div class="form-group mt-5">
                        {{ form_row(form.userName, {'label': "User Name", 'attr': {'placeholder': "Nom d'utilisateur", 'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-4">
                        {{ form_row(form.email, {'label': "E-mail", 'attr': {'placeholder': "Adresse E-mail", 'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-4">
                        {{ form_row(form.password, {'label': "Password", 'attr': {'placeholder': "Mot de passe", 'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-4">
                        {{ form_row(form.confirmPassword, {'label': "Confirm Password", 'attr': {'placeholder': "Répétez le mot de passe", 'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success" style="margin-top: 10px;">Register</button>
                    </div>

                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
